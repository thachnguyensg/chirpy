meta {
  name: Login
  type: http
  seq: 5
}

post {
  url: {{host}}/api/login
  body: json
  auth: inherit
}

body:json {
  {
    "email": "{{user_email}}",
    "password": "{{password}}",
    "expires_in_seconds": 60
  }
}

vars:post-response {
  user_id: res.body.id
  token: res.body.token
  refresh_token: res.body.refresh_token
}

settings {
  encodeUrl: true
  timeout: 0
}
